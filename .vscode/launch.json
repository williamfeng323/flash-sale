{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "preLaunchTask": "ts_compile",
      "program": "${workspaceRoot}/src/server.ts",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ],
      "protocol": "inspector",
      "smartStep": true,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "DEBUG": "*",
      },
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug test",
      "preLaunchTask":"ts_init",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "protocol": "inspector",
      "smartStep": true,
      "args": [
        "-u", "tdd",
        "--timeout", "99999",
        "--colors",
        "-r",
        "${workspaceRoot}/node_modules/ts-node/register",
        "${workspaceRoot}/test/**/*.test.ts",
      ],
      "runtimeArgs": [
        "--nolazy"
      ],
      "envFile": "${workspaceFolder}/profiles/debug.env",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/build/**/*"
      ]
    }
  ]
}
